@model List<PrimerParcial.Logica.Nene>

@{
    ViewData["Title"] = "Mostrar Resultados";
}

<h2>Mostrar Resultados</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead clase="table-primary">
            <tr>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Peso</th>
                <th>=</th>
                <th>Tamaño de pañal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nene in Model)
            {
                <tr>
                    <td>@nene.Nombre</td>
                    <td>@nene.Edad</td>
                    <td>@nene.Peso</td>
                    <td>=</td>
                    <td>@nene.Tamanio</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay resultados para mostrar.</p>
}

<a href="~/Principal/Inicio" class="btn btn-primary">Volver</a>

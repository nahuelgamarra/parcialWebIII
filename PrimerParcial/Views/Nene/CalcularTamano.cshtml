@model PrimerParcial.Logica.Nene

@{
    ViewData["Title"] = "Agregar Nene";
}

<h2>Agregar Nene</h2>

<form asp-controller="Nene" asp-action="CalcularTamano" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre del Niño:</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Peso">Peso del Niño:</label>
        <input asp-for="Peso" class="form-control" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edad">Edad del Niño:</label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
